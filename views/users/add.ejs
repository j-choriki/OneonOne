<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
</head>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main>
        <form action="/users/add" method="post">
            <div>
                <label for="employee_id">社員ID</label>
                <input type="text" name="employee_id" id="employee_id" value="<%= form.employee_id %>">
                <% if(err != null){for(let i in err){if(err[i].path === 'employee_id') { %>
                    <span class="err"><%= err[i].msg %></span>
                <% }}} %>
            </div>
            <div>
                <label for="name">氏名</label>
                <input type="text" name="name" id="name" value="<%= form.name %>">
                <% if(err != null){for(let i in err){if(err[i].path === 'name') { %>
                    <span class="err"><%= err[i].msg %></span>
                <% }}} %>
            </div>
            <div>
                <label for="pass">パスワード</label>
                <input type="password" name="pass" id="pass" value="<%= form.pass %>">
                <% if(err != null){for(let i in err){if(err[i].path === 'pass') { %>
                    <span class="err"><%= err[i].msg %></span>
                <% }}} %>
            </div>
            <div>
                <label for="company_id">会社ID</label>
                <input type="text" name="company_id" id="company_id" value="<%= form.company_id %>">
                <% if(err != null){for(let i in err){if(err[i].path === 'company_id') { %>
                    <span class="err"><%= err[i].msg %></span>
                <% }}} %>
            </div>
            <div>
                <label for="division">所属部署</label>
                <select name="division" id="division">
                    <option value="999">選択してください</option>
                    <% for(let i in content){ %>
                        <option value="<%= content[i].id %>" <% if(content[i].id == form.division){%>selected<%} %>><%= content[i].name%></option>
                    <% } %>
                </select>
                <% if(err != null){for(let i in err){if(err[i].path === 'division') { %>
                    <span class="err"><%= err[i].msg %></span>
                <% }}} %>
            </div>
            <input type="submit" value="確認" name="conf">
        </form>
        <p><a href="/users">ログイン画面へ</a></p>
    </main>
</body>
</html>